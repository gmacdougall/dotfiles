[color]
  ui = true
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[alias]
  s = status
  st = status
  su = submodule update
  cp = cherry-pick
  cpa = cherry-pick --abort
  cpc = cherry-pick --continue
  rc = rebase --continue
  recentb = "!r() { count=$1; git for-each-ref --sort=-committerdate refs/heads --format='%(color:yellow)%(refname:short) %(color:bold green)%(committerdate:relative) %(color:blue)%(subject) %(color:magenta)%(authorname)%(color:reset)' --color=always --count=${count:-20} | column -ts' '; }; r"
[log]
  decorate = true
[include]
  path = .gitconfig.user
[push]
  default = simple
[rebase]
  autosquash = true
[core]
  editor = /usr/bin/nvim
  excludesfile = ~/.config/git/ignore_global
