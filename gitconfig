[color]
  ui = true
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[alias]
  s = status
  st = status
  su = submodule update
  cp = cherry-pick
  cpa = cherry-pick --abort
  cpc = cherry-pick --continue
  rc = rebase --continue
[log]
  decorate = true
[include]
  path = .gitconfig.user
[push]
  default = simple
[rebase]
  autosquash = true
[core]
  editor = /usr/bin/nvim
  excludesfile = ~/.gitignore_global
[user]
  email = gmacdougall0+github@gmail.com
  name = Gregor MacDougall
[merge]
  conflictstyle = diff3
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
[include]
  path = ~/.gitconfig.local
